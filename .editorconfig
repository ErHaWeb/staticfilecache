# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 2

[**.css]
indent_style = tab
indent_size = 2

[**.php]
indent_style = space
indent_size = 4

[**.html]
indent_style = tab
indent_size = 2

[**.yml]
indent_style = space
indent_size = 2

[**.md]
indent_style = space
indent_size = 4
max_line_length = 80

[**.{rst,rst.txt}]
indent_style = space
indent_size = 3
max_line_length = 80
